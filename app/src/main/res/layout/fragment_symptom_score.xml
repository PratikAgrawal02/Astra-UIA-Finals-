<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".mainFragments.SymptomScore"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:gravity="left"
        android:id="@+id/ll1"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HelloTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Hello"
                android:textColor="@color/white"
                android:textSize="60sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/namePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_medium"
                android:text="Loading name..."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/HelloTextView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/HelloTextView"
                app:layout_constraintTop_toBottomOf="@+id/HelloTextView" />

        </LinearLayout>
        <ImageView
            android:layout_width="60dp"
            android:src="@drawable/idcard"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/Usercode"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:id="@+id/ll2"
        android:background="@drawable/white_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cr1"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_tag"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="#353434"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symptom_tagline"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_light"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="9dp"
                    android:clickable="true"
                    android:id="@+id/updatesymptoms"
                    android:layout_marginStart="9dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/orange"
                    android:focusable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Update Your Symptoms"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_bold"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cr1"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:textColor="@color/text_color_light"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18sp"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View More"
                    android:id="@+id/viewreport"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"/>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="90dp"
               android:orientation="horizontal"
               android:padding="10dp"
               android:gravity="center"
               android:background="@drawable/report">
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
               <LinearLayout
                   android:layout_width="100dp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:background="@drawable/green_dot"/>
                       <Space
                           android:layout_width="5dp"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Yes"
                           android:gravity="top"
                           android:textSize="16sp"
                           android:fontFamily="@font/poppins_bold"
                           android:textColor="@color/green"/>
                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="29%"
                       android:textSize="25sp"
                       android:id="@+id/yespercenttext"
                       android:textColor="@color/black"
                       android:fontFamily="@font/poppins_medium"/>
               </LinearLayout>
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
               <View
                   android:layout_width="1.7dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:background="@color/light_grey" />
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
               <LinearLayout
                   android:layout_width="100dp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:background="@drawable/red_dot"/>
                       <Space
                           android:layout_width="5dp"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="No"
                           android:gravity="top"
                           android:textSize="16sp"
                           android:fontFamily="@font/poppins_bold"
                           android:textColor="@color/orange"/>
                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="81%"
                       android:textSize="25sp"
                       android:id="@+id/nopercenttext"
                       android:textColor="@color/black"
                       android:fontFamily="@font/poppins_medium"/>
               </LinearLayout>
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
           </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Status"
                android:textColor="@color/text_color_light"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/No_Tumor"
                android:id="@+id/tumorstatus"
                android:textColor="@color/green"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>