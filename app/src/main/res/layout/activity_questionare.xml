<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Questionare"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/HelloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Enter your details here"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:background="@null"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:backgroundTint="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginBottom="-10dp"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity=""
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Annual Income"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/income"
                            android:background="@android:drawable/btn_dropdown"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Education"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="Enter Your Answer"
                            android:popupBackground="@color/white"
                            android:id="@+id/education"
                            android:background="@android:drawable/btn_dropdown"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Employment Status"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/employment"
                            android:background="@android:drawable/btn_dropdown"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Food Availability"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/food"
                            android:background="@android:drawable/btn_dropdown"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Housing Status"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/housing"
                            android:background="@android:drawable/btn_dropdown"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Have you ever been exposed to Social Discrimination?"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/social"
                            android:background="@android:drawable/btn_dropdown"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"

                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any undergoing medical treatment?"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_blue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/medical"
                            android:background="@android:drawable/btn_dropdown"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>

        </ScrollView>


    </LinearLayout>




</RelativeLayout>